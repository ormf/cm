			   ((= numf 13)
			    (set-coeffs formfil (aref state-3 jj 0) (aref state-3 jj 1) (aref state-3  jj 2)))
			   )
		     (let ((filsig (mvmfilt formfil outvalA))
			   )
		       (incf add-fl filsig)
		   )))
		 ;;
		 (outa i (*  (env ampf) add-fl))
