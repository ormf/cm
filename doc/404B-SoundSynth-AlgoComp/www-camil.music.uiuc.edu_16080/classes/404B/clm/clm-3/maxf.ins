(definstrument maxfilter (file beg 
			       &key
			       (att 1) ; in-file attenuation 
			       (numf 1) ; one filter
			       ;;(numf 9)	; 9 Filters
			       ;;(numf 12); 12 Filters
			       ;;(numf 13); 13 Filters
			       ;;(numf 4); 4 Filters
