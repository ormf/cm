		   (progn
		     (cond ((= numf 1)
			    (set-coeffs formfil (aref state-0 jj 0) (aref state-0 jj 1) (aref state-0  jj 2)))
			   ((= numf 2)
			    (set-coeffs formfil (aref state-5 jj 0) (aref state-5 jj 1) (aref state-5  jj 2)))
			   ((= numf 4)
