		     (setf (aref state-3 12 2) 2)
		     ))
					;
		   ((= numf 4)
		    (progn
		      (format t ";;;; State4:   Four filters ~%")
		      (setf (aref state-4 0 0) 7.54e-002)
		      (setf (aref state-4 0 1) (* 1000 freqfactor ))
