(definstrument testR (beg end R0 R1 freq G)
  (let* ((amp .5)
         (f (make-formant R0 freq G))
         (noi (make-rand :frequency 5000))
	 (R R0)
	 (incR (/ (- R1 R0) (- end beg))))
    (run
     (loop for i from beg to end do
       (outa i (* amp (formant f (rand noi))))
       (setf (mus-formant-radius f) R)
       (incf R incR)))))
