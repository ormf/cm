(definstrument filter-white-noise (beg end R freq G)
  (let* ((amp .5)
         (f (make-formant R freq G))
         (noi (make-rand :frequency 5000 :amplitude .1)))
    (run
      (loop for i from beg to end do
        (outa i (* amp (formant f (rand noi))))))))

