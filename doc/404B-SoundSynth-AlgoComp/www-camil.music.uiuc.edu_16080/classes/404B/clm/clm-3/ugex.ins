(definstrument filter-white-noise-1 (beg end R freq G)
  (let* ((amp .5)
         (f (make-formant R freq G))
         (noi (make-rand :frequency 1000 :amplitude .1))
	 (er (make-env '(0 .99 1 .5) :scaler 1.0 :end end))
	 (ef (make-env '(0 1 1 .1) :scaler 5000 :end end)))
    (run
      (loop for i from beg to end do
	(outa i (* amp (formant f (rand noi))))
	(setf (mus-frequency f) (env ef))
	(setf (mus-formant-radius f) (env er))))))

